{
  "name": "doppelkopf-game",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "workspaces": [
    "server",
    "shared"
  ],
  "scripts": {
    "dev": "vite",
    "build": "npm run build -w @doppelkopf/game-logic && tsc -b && vite build",
    "build:shared": "npm run build -w @doppelkopf/game-logic",
    "test": "vitest",
    "lint": "eslint .",
    "preview": "vite preview",
    "server": "npm run start -w doppelkopf-server",
    "start": "npm install && npm run build && npm run build -w doppelkopf-server && npm run serve -w doppelkopf-server"
  },
  "dependencies": {
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "socket.io-client": "^4.8.3",
    "@doppelkopf/game-logic": "*"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.1",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.5.0",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.48.0",
    "vite": "^7.3.1",
    "vitest": "^4.0.18"
  }
}
